<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EHWM.Views.SinkronizimiPage" Title="Sinkronizimi">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Editor AutoSize="Disabled" Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding EditorView}" FontSize="14" HeightRequest="500" />
                <Button Text="Sink. cmimet" Grid.Row="1" Grid.Column="0" Command="{Binding SinkronizoCmimet}"/>
                <Button Text="Sink. klientet" Grid.Row="1" Grid.Column="1" Command="{Binding SinkronizoKlientet}"/>
                <Button Text="Azhurno" Grid.Row="2" Grid.ColumnSpan="2" Command="{Binding AzhurnoCommand}"/>
                <Button Text="Sinkronizo" Grid.Row="3" Grid.ColumnSpan="2" Command="{Binding SinkronizoCommand}"/>
                <Button Text="Lif dhe Por" Grid.Row="4" Grid.Column="0" Command="{Binding LifDheArtCommand}"/>
                <Button Text="Shkarko" Grid.Row="4" Grid.Column="1" Command="{Binding ShkarkoCommand}"/>
            </Grid>

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>